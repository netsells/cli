#!/usr/bin/env bash

IMAGE="netsells/cli"
VERSION="dev-docker-wrapper"

DOCKER_IMAGE="$IMAGE:$VERSION"

error(){
  error_code=$1
  echo "We had a problem! $2" >&2
  exit $1
}

#Â Check for docker
which docker > /dev/null 2>&1 || error 1 "ðŸ³ Docker was not found! Please install it and try again."

if [[ $1 == "self-update" ]]
then
    docker pull $DOCKER_IMAGE

    sudo sh -c "docker run \
        --rm \
        --init \
        --entrypoint=/bin/cat \
        $DOCKER_IMAGE \
        /usr/local/bin/netsells-wrapper > $0"

    exit 0
fi

exec docker run \
    --rm \
    --init \
    -it \
    -v $(pwd):/app \
    -v ~/.ssh:/root/.ssh \
    -v ~/.aws:/root/.aws \
    -v /var/run/docker.sock:/var/run/docker.sock \
    $DOCKER_IMAGE "$@"
